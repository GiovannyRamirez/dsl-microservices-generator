version: '2'

services:

  nginx:
    image: nginx:alpine
    volumes: 
      - ./nginx.conf:/etc/nginx/nginx.conf  
    command: [nginx-debug, '-g', 'daemon off;']
    links: 
      {% for entity in entities %}  
      - {{entity.name}}s
      {% endfor %}
    ports:
      - "8080:80"

  {{entity.name}}s:
    build: ./{{entity.name}}s